@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class= "row">
    <div class="col-md-6 offser-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login'>Đăng nhập</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Register'>Đăng kí</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="Row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
        $(fuction(){
            var current = location.pathname;
            $('.nav-tabs li a').each(fuction(){
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !==1){
                    $this.addClass('active');
                }
            })
        })
    </script>
}
